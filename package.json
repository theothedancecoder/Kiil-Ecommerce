{
  "name": "kiil-ecommerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typegen": "npx sanity@latest schema extract && npx sanity@latest typegen generate",
    "analyze": "node scripts/analyze-bundle.js",
    "build:analyze": "ANALYZE=true npm run build",
    "migration:test": "node scripts/test-migration-setup.js",
    "migration:run": "node scripts/migrate-products-to-sanity.js",
    "migration:help": "echo 'Migration Commands:' && echo '  npm run migration:test  - Test migration setup' && echo '  npm run migration:run   - Run product migration' && echo '  See MIGRATION_GUIDE.md for full instructions'",
    "stock:add": "node scripts/add-stock-to-products.js",
    "stock:help": "echo 'Stock Management Commands:' && echo '  npm run stock:add  - Add stock quantities to all products in Sanity'",
    "validate-env": "node scripts/validate-env.js",
    "debug:images": "npm run validate-env && echo 'Environment validated. Check browser console for image debug info.'",
    "setup:homepage": "node scripts/create-homepage-content.js",
    "verify:homepage": "node scripts/verify-homepage-sanity.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.21.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@sanity/client": "^7.8.1",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^3.92.0",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.18.1",
    "lightningcss": "^1.30.1",
    "lucide-react": "^0.515.0",
    "next": "15.3.3",
    "next-sanity": "^9.12.3",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "resend": "^4.6.0",
    "sanity": "^3.92.0",
    "stripe": "^18.2.1",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "24.0.14",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "node-fetch": "^2.7.0",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.4",
    "typescript": "5.8.3"
  }
}
